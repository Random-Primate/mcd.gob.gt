= simple_form_for @implemento, html: { class: 'form-devise' } do |f|
  = f.error_notification

  .form-inputs
    = f.text_field :name, class: 'form-control top', placeholder: 'Nombre'
    = f.text_field :piezas, class: 'form-control last', placeholder: 'Piezas'

  .form-actions
    = f.button :submit, 'Guardar', :class => 'btn btn-lg btn-primary btn-block'
