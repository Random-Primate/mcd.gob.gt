.container
  - breadcrumb :departamentos
  .well
    .row
      %h1.col-md-6
        = 'Lista de Departamentos'
      .col-md-6
        = link_to 'Agregar Departamento', new_departamento_path, class: 'btn btn-default pull-right title-btn'
  %br

  %table.table.table-striped.table-hover

    - @departamentos.each do |departamento|
      %tr
        %td= departamento.name
        %td= link_to 'Municipios', departamento
        %td= link_to 'Editar', edit_departamento_path(departamento)
        %td= link_to 'Eliminar', departamento, :method => :delete, :data => { :confirm => 'Confirmar.' }

  = will_paginate @departamentos, class: 'paginate-bot'