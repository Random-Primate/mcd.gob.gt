.container
  = form_for(resource, :html => { class: 'form-devise'}, as: resource_name, url: registration_path(resource_name)) do |f|
    %h2 Ingreso
    = devise_error_messages!
    = f.text_field :first_name, :class => 'form-control top', :placeholder => 'Nombre',  :autofocus => '', :required => ''
    = f.text_field :last_name, :class => 'form-control mid', :placeholder => 'Apellido', :required => ''
    = f.email_field :email, :class => 'form-control mid', :placeholder => 'Correo', :required => ''
    = f.password_field :password, autocomplete: 'off', :class => 'form-control mid', :required => '', :placeholder => 'ContraseÃ±a'
    = f.password_field :password_confirmation, autocomplete: 'off', :class => 'form-control last', :placeholder => 'Confirmar', :required => ''
    = f.select :role, options_from_collection_for_select(Role.all,'name','name')
    = f.submit 'Enviar', :class => 'btn btn-lg btn-primary btn-block'
    - if @validatable
      %br
      %p.requirements
        = 'Password requires '
        = @minimum_password_length
        ='characters minimum'
        %br
    %hr.faded
    = render 'devise/shared/links'