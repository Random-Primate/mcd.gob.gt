.container
  = form_for(resource, :html => { class: 'form-signup'}, as: resource_name, url: registration_path(resource_name)) do |f|
    %h2 Sign Up
    = devise_error_messages!
    = f.email_field :email, :class => 'form-control', :placeholder => 'Email', :required => '',  :autofocus => ''
    = f.password_field :password, autocomplete: 'off', :class => 'form-control', :id => 'pwd', :required => '', :placeholder => 'Password'
    = f.password_field :password_confirmation, autocomplete: 'off', :class => 'form-control', :id => 'confirmpwd', :placeholder => 'Confirm Password', :required => ''
    = f.submit 'Submit', :class => 'btn btn-lg btn-primary btn-block'
    - if @validatable
      %br
      %p.requirements
        = 'Password requires '
        = @minimum_password_length
        ='characters minimum'
        %br
    %hr.faded
    = render 'devise/shared/links'