= form_for resource, as: resource_name, url: unlock_path(resource_name), html: { class: 'form-devise', method: :post } do |f|
  %h3= 'Resend unlock instructions'
  = devise_error_messages!
  = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control', id: 'recemail'
  = f.submit 'Resend instructions', :class => 'btn btn-lg btn-primary btn-block'
  %hr.faded
    = render 'devise/shared/links'
