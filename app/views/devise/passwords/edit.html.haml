%h2= 'Change your password'

= form_for resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-devise', method: :put } do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  = f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: 'New password'
  = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm new password', class: 'form-control'
  = f.submit 'Change my password', :class => 'btn btn-lg btn-primary btn-block'
  %hr.faded
    = render 'devise/shared/links'
