= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-devise', method: :post }) do |f|
  %h3= 'Forgot your password?'
  = devise_error_messages!
  = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', id: 'recemail'
  = f.submit 'Send instructions', :class => 'btn btn-lg btn-primary btn-block'
  %hr.faded
    = render 'devise/shared/links'
