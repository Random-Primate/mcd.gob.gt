= simple_form_for @solicitud, html: { class: 'form-devise' } do |f|
  = f.error_notification

  .form-inputs
    = f.input :departamento, collection: Departamento.order(:name), value_method: :name, prompt: 'Departamento', label: false
    = f.input :municipio, collection: Departamento.order(:name), value_method: :name, as: :grouped_select, label: false, group_method: :municipios, prompt: 'Municipio'

  .input_fields_wrap
    = f.input_field :comunidades, as: :string, multiple: true
    = link_to 'Add', '#', class: 'add_field_button'

  .input_fields_wrap_second
    = f.association :implementos, collection: Implemento.order(:name)
    = link_to 'Add', '#', class: 'add_field_button_second'

  = f.association :solicitante, label_method: :complete_name, prompt: 'Solicitante', label: false

  .form-actions
    = f.button :submit
